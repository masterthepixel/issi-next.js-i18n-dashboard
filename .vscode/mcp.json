{
    // MCP server configuration for ISSI Next.js i18n Dashboard
    "name": "issi-next.js-i18n-dashboard",
    "description": "Interactive, multilingual Next.js dashboard with Aceternity UI timelines and Framer Motion integration.",
    "entry": "src/app/layout.tsx",
    "language": "typescript",
    "framework": "nextjs",
    "features": [
        "i18n",
        "framer-motion",
        "aceternity-ui",
        "timeline-component",
        "multilingual-support"
